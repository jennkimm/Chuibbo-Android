<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="26dp">

            <ImageView
                android:id="@+id/gradation_none"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_color_none"
                android:background="#00FFFFFF"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="20dp"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/gradation1"
                android:layout_width="28dp"
                android:layout_height="36dp"
                android:src="@drawable/gradation1"
                android:layout_marginRight="17dp"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/gradation2"
                android:layout_width="28dp"
                android:layout_height="36dp"
                android:src="@drawable/gradation2"
                android:layout_marginRight="17dp"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/gradation3"
                android:layout_width="28dp"
                android:layout_height="36dp"
                android:src="@drawable/gradation3"
                android:layout_marginRight="17dp"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/gradation4"
                android:layout_width="28dp"
                android:layout_height="36dp"
                android:src="@drawable/gradation4"
                android:layout_marginRight="17dp"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/gradation5"
                android:layout_width="28dp"
                android:layout_height="36dp"
                android:src="@drawable/gradation5"
                android:layout_marginRight="50dp"
                tools:ignore="MissingConstraints" />

        </LinearLayout>
    </HorizontalScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>