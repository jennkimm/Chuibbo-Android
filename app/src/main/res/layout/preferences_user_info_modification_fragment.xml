<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="67dp">

    <TextView
        android:id="@+id/email_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/email_text_korean"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/password_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/password_text_korean"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/email_text"
        android:textSize="15sp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/user_info_modification_button"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/button_shape"
        android:text="@string/complete_user_info_modeification"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/password_text"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>