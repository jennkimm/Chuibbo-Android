<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_100">

    <ImageView
        android:id="@+id/img_download"
        android:layout_width="250dp"
        android:layout_height="315dp"
        android:layout_marginTop="41dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/garo_line"
        android:layout_height="1px"
        android:background="@color/gray_300"
        android:layout_marginTop="25px"
        app:layout_constraintEnd_toEndOf="@+id/img_download"
        app:layout_constraintStart_toStartOf="@+id/img_download"
        app:layout_constraintTop_toBottomOf="@id/img_download"
        android:layout_width="0px" />

    <View
        android:id="@+id/sero_line"
        android:layout_width="1px"
        android:layout_height="0px"
        android:background="@color/gray_300"
        app:layout_constraintTop_toTopOf="@id/img_download"
        app:layout_constraintBottom_toBottomOf="@id/img_download"
        app:layout_constraintLeft_toRightOf="@id/img_download"
        android:layout_marginLeft="25px"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:text="3.5"
        android:textColor="@color/gray_300"
        app:layout_constraintTop_toBottomOf="@id/garo_line"
        app:layout_constraintLeft_toLeftOf="@id/garo_line"
        app:layout_constraintRight_toRightOf="@id/garo_line"
        android:textAlignment="center"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0px"
        android:text="4.5"
        android:textColor="@color/gray_300"
        app:layout_constraintLeft_toRightOf="@id/sero_line"
        app:layout_constraintTop_toTopOf="@id/sero_line"
        app:layout_constraintBottom_toBottomOf="@id/sero_line"
        android:layout_marginLeft="5px"
        android:gravity="center"/>

</androidx.constraintlayout.widget.ConstraintLayout>