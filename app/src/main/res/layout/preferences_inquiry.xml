<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/inquiry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/inquiry"
        android:layout_marginLeft="53dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/inquiry_contents"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scrollbars="vertical"
        android:scrollbarFadeDuration="0"
        android:text=""
        android:background="@color/gray"
        android:layout_marginLeft="53dp"
        android:layout_marginRight="53dp"
        android:layout_marginTop="13dp"
        app:layout_constraintStart_toStartOf="@id/inquiry"
        app:layout_constraintTop_toBottomOf="@+id/inquiry"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/inquiry_button"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/main_button"
        android:text="@string/submission_text_korean"
        android:layout_marginLeft="67dp"
        android:layout_marginRight="67dp"
        android:layout_marginTop="59dp"
        app:layout_constraintTop_toBottomOf="@+id/inquiry_contents"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>